{
  "name": "@dmitry-n-medvedev/apiserver",
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "version": "0.0.0",
  "license": "MIT",
  "description": "api server",
  "main": "server.mjs",
  "module": "server.mjs",
  "engines": {
    "node": "= 14.11.0",
    "pnpm": "= 5.6.1"
  },
  "engineStrict": true,
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./ --ext .js --ext .mjs",
    "pretest": "pnpm run lint && pnpm audit",
    "test": "cross-env NODE_ENV=test NODE_DEBUG=LibAPI ./node_modules/.bin/nyc ./node_modules/.bin/mocha -- --experimental-json-modules --trace-warnings",
    "coverage": "./node_modules/.bin/nyc report reporter=text-lcov | ./node_modules/.bin/coveralls"
  },
  "dependencies": {
    "@dmitry-n-medvedev/libapi": "workspace:^0.0.0",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v18.5.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "mocha": "^8.0.1",
    "nanoid": "^3.1.10",
    "nyc": "^15.1.0",
    "ws": "^7.3.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.1",
    "utf-8-validate": "^5.0.2"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.spec.mjs"
    ],
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    }
  },
  "mocha": {
    "allow-uncaught": false,
    "async-only": true,
    "bail": true,
    "check-leaks": true,
    "exit": true,
    "forbid-only": false,
    "forbid-pending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "full-trace": true,
    "growl": false,
    "inline-diffs": true,
    "reporter": "spec",
    "no-config": true,
    "no-opts": true,
    "spec": [
      "./specs/*.*js"
    ]
  }
}
